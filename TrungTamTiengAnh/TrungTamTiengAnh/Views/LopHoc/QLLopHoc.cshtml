@model IEnumerable<TrungTamTiengAnh.Models.Entities.LopHoc>

@{
    ViewBag.Title = "Quản lí lớp học";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Quản lí lớp học</h2>

<div class="panel-body">
    @using (Html.BeginForm("QLPhongHoc", "PhongHoc", FormMethod.Get))
    {
        <div class="row">
            <div class="col-lg-12">
                <div class="col-lg-4">

                    <a type="button" class="btn btn-primary" href="/LopHoc/ThemLopHoc">Thêm phòng học</a>
                </div>
                <div class="col-md-3">
                    <input type="text" value="@ViewBag.SearchString " name="searchString" placeholder="Tìm kiếm" />
                </div>
                <div class="col-md-3">
                    <button type="submit" class="btn btn-success"> Tìm kiếm</button>
                </div>
            </div>

        </div>
    }
</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Khóa học")
        </th>
        <th>
            @Html.DisplayName("Giáo viên")
        </th>
        <th>
            @Html.DisplayName("Phòng học")
        </th>
        <th>
            @Html.DisplayName("Tên lớp học")
        </th>
        <th>
            @Html.DisplayName("Giới hạn số học sinh")
        </th>
        <th>
            @Html.DisplayName("Ngày thi")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.KhoaHoc.TenKhoaHoc)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GiaoVien.TenGiaoVien)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PhongHoc.TenPhongHoc)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TenLopHoc)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SoLuongHS)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LichThi)
        </td>
        <td>
            @Html.ActionLink("Sửa", "SuaLopHoc", new { id = item.LopHocID }) |
            @Html.ActionLink("Xóa", "XoaLopHoc", new { id=item.LopHocID }, new { onclick = "return ConfirmationDialog()" })
        </td>
    </tr>
}

</table>


@model TrungTamTiengAnh.Models.Entities.PhongHoc

@{
    ViewBag.Title = "Sửa thông tin phòng học";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Sửa thông tin phòng học</h2>

@using (Html.BeginForm("EditActionTea", "PhongHoc"))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.PhongHocID)

        <div class="form-group">
            <div class="control-label col-md-2">
                @Html.Label("Tên phòng học")
            </div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenPhongHoc, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenPhongHoc, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2">
                @Html.Label("Trang thiết bị")
            </div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.TrangThietBi, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TrangThietBi, "", new { @class = "text-danger" })
            </div>
        </div>

       

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Lưu" class="btn btn-default" onclick="confirmEdit()" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Quay lại", "QLPhongHoc")
</div>

@model IEnumerable<TrungTamTiengAnh.Models.Entities.HoaDon>

@{
        ViewBag.Title = "Hóa Đơn";
        Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@{
    int id = 0;
    string ten = null;
    DateTime? ns = null;
    string ph = null;
}
@foreach (var item in Model)
{
    id = item.HocSinh.HocSinhID;
    ten = item.HocSinh.TenHocSinh;
    ns = item.HocSinh.NgaySinh;
    ph = item.HocSinh.PhuHuynh;

}
<h2>Hóa Đơn Học Sinh</h2>
<div class="panel-body">
        <div class="row">
            <div class="col-lg-12">
                <div class="col-md-2">
                    <h4>Mã học sinh: @id </h4>
                </div>
                <div class="col-md-3">
                    <h4>Tên học sinh: @ten</h4>
                </div>
                <div class="col-md-3">
                    <h4>Ngày sinh: @ns</h4>
                </div>
                <div class="col-md-3">
                    <h4>Phụ huynh: @ph</h4>
                </div>
            </div>
        </div>
</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Khóa học")
        </th>
        <th>
            @Html.DisplayName("Độ tuổi")
        </th>
        <th>
            @Html.DisplayName("Ngày lập")
        </th>
        <th>
            @Html.DisplayName("Học phí")
        </th>
        <th>
            @Html.DisplayName("Tình trạng")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.KhoaHoc.TenKhoaHoc)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.KhoaHoc.DoTuoi.KhoangDoTuoi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NgayHoaDon)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.KhoaHoc.HocPhi)
        </td>
        <td>
            @if (item.TinhTrang == 1)
            {
                <h6>Đã thanh toán</h6>
            }
            else
            {
                <h6>Chưa thanh toán</h6>
            }

        </td>
        <td>
            
        </td>
    </tr>
}

</table>


@model TrungTamTiengAnh.Models.Entities.DoTuoi

@{
    ViewBag.Title = "Sửa thông tin độ tuổi";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Sửa thông tin độ tuổi</h2>

@using (Html.BeginForm("EditActionTea", "DoTuoi"))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.DoTuoiID)

        <div class="form-group">
            <div class="control-label col-md-2">
                @Html.Label("Khoảng độ tuổi")
            </div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.KhoangDoTuoi, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.KhoangDoTuoi, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Lưu" class="btn btn-default" onclick="confirmEdit()" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Quay lại", "QLDoTuoi")
</div>

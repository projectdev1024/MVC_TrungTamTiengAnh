@model TrungTamTiengAnh.Models.Entities.DoTuoi
@{
    ViewBag.Title = "Thêm độ tuổi";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Thêm mới phòng học</h2>
@using (Html.BeginForm("AddAge", "DoTuoi"))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Điền thông tin</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="control-label col-md-2">
                @Html.Label("Khoảng độ tuổi")
            </div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.KhoangDoTuoi, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.KhoangDoTuoi, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Thêm mới" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Quay lại", "QLDoTuoi")
</div>
